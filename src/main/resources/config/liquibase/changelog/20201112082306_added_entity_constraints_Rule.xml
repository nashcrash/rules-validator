<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity Rule.
    -->
    <changeSet id="20201112082306-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="operator_id"
                                 baseTableName="rule"
                                 constraintName="fk_rule_operator_id"
                                 referencedColumnNames="id"
                                 referencedTableName="operator"/>

        <addForeignKeyConstraint baseColumnNames="rule_id"
                                 baseTableName="rule_parameter"
                                 constraintName="fk_rule_parameter_rule_id"
                                 referencedColumnNames="id"
                                 referencedTableName="rule"/>

        <addForeignKeyConstraint baseColumnNames="parameter_id"
                                 baseTableName="rule_parameter"
                                 constraintName="fk_rule_parameter_parameter_id"
                                 referencedColumnNames="id"
                                 referencedTableName="parameter"/>
        
    </changeSet>
</databaseChangeLog>
